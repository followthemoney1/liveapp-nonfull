<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:baselineAligned="true"
              android:orientation="horizontal" >
    <LinearLayout
        android:paddingTop="@dimen/padding_normal"
        android:paddingBottom="@dimen/padding_normal"
        android:id="@+id/date_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:layout_margin="@dimen/padding_small"
            android:id="@+id/date_plus"
            android:layout_width="@dimen/size_image_date_pick_btn"
            android:layout_height="@dimen/size_image_date_pick_btn"
            android:background="@drawable/up_pick" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/date_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true" />

        <Button
            android:layout_margin="@dimen/padding_small"
            android:id="@+id/date_minus"
            android:layout_width="@dimen/size_image_date_pick_btn"
            android:layout_height="@dimen/size_image_date_pick_btn"
            android:background="@drawable/down_pick" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/month_container"
        android:layout_width="@dimen/size_data_picker_text_monts"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/padding_large"
        android:paddingTop="@dimen/padding_normal"
        android:paddingBottom="@dimen/padding_normal"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:layout_margin="@dimen/padding_small"
            android:id="@+id/month_plus"
            android:layout_width="@dimen/size_image_date_pick_btn"
            android:layout_height="@dimen/size_image_date_pick_btn"
            android:background="@drawable/up_pick" />

        <TextView
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:id="@+id/month_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:gravity="center"
            android:singleLine="true" >
        </TextView>

        <Button
            android:layout_margin="@dimen/padding_small"
            android:id="@+id/month_minus"
            android:layout_width="@dimen/size_image_date_pick_btn"
            android:layout_height="@dimen/size_image_date_pick_btn"
            android:background="@drawable/down_pick" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="@dimen/padding_normal"
        android:paddingBottom="@dimen/padding_normal"
        android:id="@+id/year_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:layout_margin="@dimen/padding_small"
            android:id="@+id/year_plus"
            android:layout_width="@dimen/size_image_date_pick_btn"
            android:layout_height="@dimen/size_image_date_pick_btn"
            android:background="@drawable/up_pick" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/year_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true" />

        <Button
            android:layout_margin="@dimen/padding_small"
            android:id="@+id/year_minus"
            android:layout_width="@dimen/size_image_date_pick_btn"
            android:layout_height="@dimen/size_image_date_pick_btn"
            android:background="@drawable/down_pick" />
    </LinearLayout>

</LinearLayout>