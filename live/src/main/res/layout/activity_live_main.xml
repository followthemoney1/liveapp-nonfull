<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/gradient_background_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_weight="1"
        android:id="@+id/vpPager"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/bottonMenu"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btnMain"
            android:layout_weight="1"
            android:src="@drawable/main_btn_icon"
            android:layout_width="@dimen/menu_icon_size"
            android:layout_height="@dimen/menu_icon_size"/>
        <ImageView
            android:id="@+id/btnViewProposition"
            android:layout_weight="1"
            android:src="@drawable/proposal_btn_icon"
            android:layout_width="@dimen/menu_icon_size"
            android:layout_height="@dimen/menu_icon_size"/>
        <ImageView
            android:id="@+id/btnCreateProposition"
            android:layout_weight="1"
            android:src="@drawable/create_party_btn_icon"
            android:layout_width="@dimen/menu_icon_size"
            android:layout_height="@dimen/menu_icon_size"/>
        <ImageView
            android:id="@+id/btnProfile"
            android:layout_weight="1"
            android:src="@drawable/profile_btn_icon"
            android:layout_width="@dimen/menu_icon_size"
            android:layout_height="@dimen/menu_icon_size"/>
    </LinearLayout>
    </LinearLayout>
    <include layout="@layout/loading"/>
</RelativeLayout>